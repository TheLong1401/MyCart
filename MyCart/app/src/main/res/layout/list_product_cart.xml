<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_marginRight="4dp"
    android:layout_marginLeft="4dp"
    android:layout_marginBottom="10dp"
    android:background="@drawable/border_view"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:layout_height="90dp"
        android:layout_width="90dp"
        android:layout_alignParentLeft="true"
        android:layout_margin="2dp"
        android:id="@+id/imgProductCart"/>

    <TextView
        android:id="@+id/productCartName"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="8dp"
        android:layout_toLeftOf="@id/plusBtn"
        android:layout_toRightOf="@id/imgProductCart"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/productCartPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/productCartName"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="10dp"
        android:layout_toLeftOf="@id/plusBtn"
        android:layout_toRightOf="@id/imgProductCart"
        android:textColor="@color/orange_dark" />

    <ImageView
        android:layout_marginRight="16dp"
        android:layout_marginLeft="4dp"
        android:layout_height="35dp"
        android:layout_width="40dp"
        android:id="@+id/plusBtn"
        android:layout_toLeftOf="@id/sumPrice"
        android:src="@drawable/plus_icon"/>

    <TextView
        android:layout_marginRight="16dp"
        android:layout_marginLeft="4dp"
        android:layout_height="20dp"
        android:layout_width="40dp"
        android:id="@+id/quantity"
        android:layout_toLeftOf="@id/sumPrice"
        android:layout_below="@id/plusBtn"
        android:textSize="12sp"
        android:text="0"
        android:gravity="center"/>

    <ImageView
        android:layout_marginRight="16dp"
        android:layout_marginLeft="4dp"
        android:layout_height="35dp"
        android:layout_width="40dp"
        android:id="@+id/minusBtn"
        android:layout_toLeftOf="@id/sumPrice"
        android:layout_below="@id/quantity"
        android:src="@drawable/minus_icon"/>

    <TextView
        android:layout_marginRight="4dp"
        android:layout_height="90dp"
        android:layout_width="70dp"
        android:id="@+id/sumPrice"
        android:textColor="@color/orange_dark"
        android:textSize="12sp"
        android:text="Product price"
        android:gravity="center"
        android:layout_alignParentEnd="true"/>

</RelativeLayout>